<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AetherAlarm" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dodger_blue</item>
        <item name="android:windowBackground">@color/wild_sand</item>
        <item name="android:textColorPrimary">@color/vulcan</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/base_theme_snoozelo_text_size</item>
    </style>

    <style name="Theme.AetherAlarm" parent="Base.Theme.AetherAlarm" />

    <style name="Theme.AetherAlarm.Title" parent="Base.Theme.AetherAlarm">
        <item name="android:textSize">@dimen/theme_snoozeloo_title_text_size</item>
    </style>

    <style name="Theme.AetherAlarm.Splashscreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dodger_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/alarm_logo</item>
        <item name="android:windowBackground">@color/wild_sand</item>
        <item name="postSplashScreenTheme">@style/Theme.AetherAlarm</item>
    </style>
</resources>